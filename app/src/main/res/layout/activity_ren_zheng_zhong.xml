<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_is_zuzhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="组织名称 :"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_zuzhi_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:editable="false"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/ui_line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lianxiren"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="姓名 :"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_true_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:editable="false"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="30dp"
                android:background="@color/ui_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="身份证:"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_ID_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:editable="false"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="30dp"
                android:background="@color/ui_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="电话 :"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_tel_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:editable="false"
                    android:textSize="16sp" />

            </LinearLayout>


            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginLeft="85dp"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:background="@color/ui_line" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="邮箱 :"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_mailbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:background="@null"
                    android:editable="false"
                    android:paddingLeft="40dp"
                    android:textSize="16sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="30dp"
                android:background="@color/ui_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="认证图片:"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_prompt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:hint="(营业执照、其他平台账号证明资料、联系人身份证正面照片、反面照片、本人手持身份证正面照片，并确保本人头像及身份证信息清晰完整。)"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/font_gray"
                    android:textColorHint="@color/font_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/pb_pb"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <com.wevalue.view.NoScrollGridView
                        android:id="@+id/gv_gridView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:cacheColorHint="@color/transparent"
                        android:clipChildren="true"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:listSelector="@color/transparent"
                        android:numColumns="3"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp">
                        >

                    </com.wevalue.view.NoScrollGridView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="认证状态:"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/ll_biaoji"
                            android:layout_alignRight="@+id/ll_biaoji"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal"
                            android:paddingLeft="28dp"
                            android:paddingRight="28dp">

                            <TextView
                                android:id="@+id/degree1"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:background="@color/blue" />

                            <TextView
                                android:id="@+id/degree2"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_toRightOf="@id/degree1"
                                android:layout_weight="1.6"
                                android:background="@color/gray02" />

                            <TextView
                                android:id="@+id/degree3"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_toRightOf="@id/degree2"
                                android:layout_weight="1"
                                android:background="@color/gray02" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_biaoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shngqing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="50dp"
                                android:drawablePadding="2dp"
                                android:drawableTop="@mipmap/me_withdrawdegree"
                                android:text="提交申请"
                                android:textColor="@color/login_text_blue"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_tixianzhong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="2dp"
                                android:drawableTop="@mipmap/me_withdrawwite"
                                android:text="认证中"
                                android:textColor="@color/but_text_color"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_withdraw_succ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_toRightOf="@id/tv_tixianzhong"
                                android:drawablePadding="2dp"
                                android:drawableTop="@mipmap/me_withdrawwite"
                                android:text="认证成功"
                                android:textColor="@color/but_text_color"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_fail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="失败原因请查看系统消息"
                        android:textColor="@color/font_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_qurenzheng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="58dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="重新认证"
                        android:textColor="@color/blue"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_determine_but"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="注:以上信息仅用于微值平台个人认证"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>