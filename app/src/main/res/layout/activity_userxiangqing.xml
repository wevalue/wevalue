<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <ProgressBar
        android:id="@+id/prg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.wevalue.view.RoundImageView
            android:id="@+id/iv_user_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/default_head" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">



            <TextView
                android:id="@+id/tv_remarkname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="备注名"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_remarkname"
                android:layout_marginLeft="15dp"
                android:text="昵称"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_dengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_remarkname"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_nickname"
                android:text="等级"
                android:textColor="@color/login_text_blue"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_remarkname"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_dengji"
                android:text="性别"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wz_hao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nickname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/but_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_nickname"
                android:layout_below="@+id/tv_wz_hao"
                android:layout_marginTop="2dp"
                android:maxLength="20"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:text="测试一下汉字的显示效果测试一下汉字的显示"
                android:textColor="@color/font_gray"
                android:textSize="10sp" />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_fensiguangzhu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/ll_fensi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fensi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:src="@mipmap/icon_fensi_yhxq" />

            <TextView
                android:id="@+id/tv_fensi"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="粉丝"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_guanzhu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_guanzhu_yhxq" />

            <TextView
                android:id="@+id/tv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="关注"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center"

                android:text="加关注"
                android:textColor="@color/blue"
                android:textSize="14sp" />
            />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加好友"
                android:textColor="@color/blue"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fabu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="发布"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_zhuangfa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="转发"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_haoyoukejian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="朋友们"
            android:textColor="@color/text_black"
            android:textSize="14sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background"
        android:scaleType="matrix"
        android:src="@mipmap/myreleaseline" />

    <com.wevalue.view.LazyViewPager
        android:id="@+id/lvp_user_xq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"></com.wevalue.view.LazyViewPager>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>









