<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="vertical" >
    
    <include layout="@layout/head"/>


    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        
         <TextView
             android:id="@+id/tv_isTel_email"
             android:layout_width="70dp"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:textSize="16sp"
             android:text="手机号:"
             android:textColor="@color/text_black"
             android:layout_marginLeft="30dp"
             />
         <EditText 
             android:id="@+id/et_tel"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center_vertical"
             android:background="@null"
             android:paddingRight="90dp"
             android:textSize="16sp"
             android:maxLength="11"
             android:inputType="number"
             android:layout_marginLeft="20dp"
             android:textColor="@color/login_text_blue"
             android:textColorHint="@color/login_text_blue"
             android:hint="请输入手机号"/>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:background="@color/ui_line"
        />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
         android:orientation="horizontal"
        >
        
         <TextView 
             android:layout_width="70dp"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:textSize="16sp"
             android:text="验证码:"
             android:textColor="@color/text_black"
             android:layout_marginLeft="30dp"
             />
         <EditText 
             android:id="@+id/et_code"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:background="@null"
             android:textSize="16sp"
             android:inputType="number"
             android:layout_marginLeft="20dp"
             android:textColor="@color/login_text_blue"
             android:textColorHint="@color/login_text_blue"
             android:hint="请输入验证码"/>

         
         <Button
             android:id="@+id/but_getcode"
             android:layout_width="90dp"
             android:layout_height="30dp"
             android:layout_centerVertical="true"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="30dp"
             android:gravity="center"
             android:background="@mipmap/kuang_huoquyanzhengma"
             android:text="获取验证码"
             android:textSize="14sp"
             android:textColor="@color/login_text_blue"
             />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:background="@color/ui_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="新密码:"
            android:textColor="@color/text_black"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/login_text_blue"
            android:textColorHint="@color/login_text_blue"
            android:hint="请输入新密码"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:background="@color/ui_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="再输一次:"
            android:textColor="@color/text_black"
            android:layout_marginLeft="30dp"
            />

        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@color/login_text_blue"
            android:textColorHint="@color/login_text_blue"
            android:hint="请再次输入密码"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:background="@color/ui_line"
        />



    

</LinearLayout>
