<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/head"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <LinearLayout
        android:id="@+id/ll_old"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="旧密码:"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView3" />

        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:digits="@string/psw_digis"
            android:maxLength="20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/login_text_blue"
            android:textColor="@color/login_text_blue"
            android:paddingLeft="10dp"
            android:hint="请输入旧密码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="80dp"
        android:background="@color/ui_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="新密码:"
            android:textColor="@color/text_black"
            android:layout_marginLeft="15dp"
            />

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:digits="@string/psw_digis"
            android:maxLength="20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/login_text_blue"
            android:textColor="@color/login_text_blue"
            android:paddingLeft="10dp"
            android:hint="请输入新密码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="80dp"
        android:background="@color/ui_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="再输一次:"
            android:textColor="@color/text_black"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:id="@+id/et_psw_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:digits="@string/psw_digis"
            android:maxLength="20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/login_text_blue"
            android:textColor="@color/login_text_blue"
            android:paddingLeft="10dp"
            android:hint="请再次输入密码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="80dp"
        android:background="@color/ui_line"
        />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_queding_but"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@color/orange"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="确定"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </LinearLayout>


</LinearLayout>
