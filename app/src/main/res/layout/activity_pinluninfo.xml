<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head_3" />

    <EditText
        android:id="@+id/ed_pinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top|left"
        android:hint="写评论...（最多输入100字）"
        android:maxLength="100"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        >
        <ImageView
            android:id="@+id/img_touxiang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_picture"/>
        <ImageView
            android:id="@+id/img_tu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/delete"/>

    </RelativeLayout>

    
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_adddimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/but_text_color"
            android:layout_marginRight="15dp"
            android:text="图片"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/delete"/>




    </RelativeLayout>
    </LinearLayout>