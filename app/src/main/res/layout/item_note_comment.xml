<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <com.wevalue.view.RoundImageView
            android:id="@+id/iv_user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/default_head"
            app:type="round" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_nickname"
            android:text="甲"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_round2_frame_full_green"
            android:textSize="12sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
             />

        <TextView
            android:id="@+id/tv_fabulous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:padding="8dp"
            android:text="1"
            android:drawableLeft="@mipmap/ic_fabulous"
            android:textColor="@color/black_80"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:drawableLeft="@mipmap/ic_comment"
            android:textColor="@color/black_80"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_day"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="15dp"
        android:text="好稀罕你"
        android:textColor="@color/black_80"
        android:textSize="12sp" />

    <com.wevalue.view.NoScrollListview
        android:id="@+id/ls_reply"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="15dp"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/transparent"
        android:visibility="gone"
        android:background="@color/gray_f5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/ui_line" />
</LinearLayout>