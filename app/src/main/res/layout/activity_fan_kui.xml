<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/head" />

    <EditText
        android:id="@+id/et_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:maxLength="300"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="@string/fankui_edit_hint_content"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        android:textColor="@color/but_text_color"
        android:textColorHighlight="@color/background"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fankui_hint_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        android:background="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
    <LinearLayout
        android:id="@+id/ll_img_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/rl_img_1"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:visibility="gone"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/iv_img_1"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/add_picture" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_img_delete_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/delete" />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_img_2"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:visibility="gone"
            android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv_img_2"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/add_picture" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_img_delete_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/delete" />
        </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_img_3"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:visibility="gone"
            android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv_img_3"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/add_picture" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_img_delete_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/delete" />
        </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_add_img"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:background="@color/white"
	        android:gravity="right|center_vertical"
	        android:layout_gravity="right"
	        android:text="图片"
            android:drawableRight="@mipmap/hui_tupian"
            android:drawablePadding="10dp"
	        android:paddingRight="20dp"
	        android:textColor="@color/but_text_color"
	        android:textSize="14sp"
        	/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/wz_text_shape_button"
            android:hint="请输入您的姓名"
            android:textColor="@color/but_text_color"
	        android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wz_text_shape_button"
            android:hint="请输入您的手机号/邮箱"
            android:textColor="@color/but_text_color"
            android:textSize="14sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_huojiang_list"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="获奖名单"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/orange"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tijiao_but"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/btn_tuichudenglu"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="提交"
        />

</LinearLayout>